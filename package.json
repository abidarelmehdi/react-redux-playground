    "eject": "react-scripts eject",
    "watch:css": "postcss src/assets/css/tailwind.css -o src/assets/css/main.css",
    "build:css": "npm run watch:css"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "autoprefixer": "^9.7.6",
    "cross-env": "^7.0.2",
    "json-server": "^0.16.1",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^7.1.0",
    "tailwindcss": "^1.2.0"
  }
